<Page
    x:Class="GuessTheFootballer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuessTheFootballer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ScrollViewer>
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Height="640">
                <TextBox Width="200" Height="100" TextWrapping="Wrap" Margin="-100,50,0,0"></TextBox>
                <Image Source="Images/AndyCole.jpg" Height="100" Margin="280,-100,0,0"/>
                <Button Name="Button" Height="30" Width="50" Margin="50,20,0,0" Background="Green" Foreground="White" Content="Yes" Click="Button_Click"></Button>
                <Button Name="Button1" Height="30" Width="50" Margin="150,-30,0,0" Background="Red" Foreground="White" Content="No" Click="Button_Click_1"></Button>
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</Page>
