<Page x:ConnectionId='1'
    x:Class="GuessTheFootballer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GuessTheFootballer"
    xmlns:viewModel="using:GuessTheFootballer.ViewModel"
    xmlns:converters="using:GuessTheFootballer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:ObjectExistsToVisible x:Key="ObjectExistsToVisible" />
    </Page.Resources> 
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1440" />
                    </VisualState.StateTriggers>

                    <VisualState.Setters>
                        <Setter Target="myPanel.Orientation" Value="Horizontal" />
                        <Setter Target="InfoPanel.Orientation" Value="Horizontal" />

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel x:ConnectionId='2' x:Name="myPanel" Grid.Column="0" Orientation="Vertical" >
            <ListView x:ConnectionId='33' x:Name="MainList"
                                                                          
                                                                                     
                      MinWidth="250" Margin="5">

                <ListView.ItemTemplate>
                    <DataTemplate                                       >
                        <TextBlock x:ConnectionId='34'                                   />

                    </DataTemplate>


                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
        <Canvas>
            <Button x:ConnectionId='24' Name="BtnQuiz"  Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,13,0,0" Height="30" Width="100" Background="Red" Foreground="White" BorderBrush="White" Visibility="Visible"                       />
            <Button x:ConnectionId='25' Name="BtnQuiz2" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,58,0,0" Height="30" Width="100" Background="Blue" Foreground="White" BorderBrush="White" Visibility="Visible"                        />
            <Button x:ConnectionId='26' Name="BtnQuiz3" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Margin="150,101,0,0" Height="30" Width="100" Background="RoyalBlue" Foreground="White" BorderBrush="Goldenrod" Visibility="Visible"                        />
            <Button x:ConnectionId='27' Name="BtnQuiz4" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,145,0,0" Height="30" Width="100" Background="Crimson" Foreground="White" BorderBrush="DarkRed" Visibility="Visible"                        />
            <Button x:ConnectionId='28' Name="BtnQuiz5" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,189,0,0" Height="30" Width="100" Background="CornflowerBlue" Foreground="White" BorderBrush="CornflowerBlue" Visibility="Visible"                        />
            <Button x:ConnectionId='29' Name="BtnQuiz6" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,232,0,0" Height="30" Width="100" Background="Red" Foreground="White" BorderBrush="Black" Visibility="Visible"                        />
            <Button x:ConnectionId='30' Name="BtnQuiz7" Content="Start Quiz?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,277,0,0" Height="30" Width="100" Background="White" Foreground="Black" BorderBrush="Navy" Visibility="Visible"                        />
            <TextBox x:ConnectionId='31' Name="TxtHighscore" Margin="150,312,0,0" Height="30" Width="100"/>
            <Button x:ConnectionId='32' Name="BtnNewGame" Content="New Game?" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="150,277,0,0" Height="30" Width="100" Background="Purle" Foreground="White" BorderBrush="White" Visibility="Visible"                          />

        </Canvas>
        <StackPanel x:ConnectionId='3' x:Name="InfoPanel" Grid.Column="2" Orientation="Vertical"                                                                                                               >
            <TextBox x:ConnectionId='4' Name="TxtBoxTeam" IsReadOnly="True"
                                                                                           
               Margin="5" />
            <TextBox x:ConnectionId='5' IsReadOnly="True"
                                                                                               
               Margin="5" />
            <TextBox x:ConnectionId='6' IsReadOnly="True"
                                                                                               
               Margin="5" />
            <TextBox x:ConnectionId='7' IsReadOnly="True"
                                                                                                     
               Margin="5" />
            <Image x:ConnectionId='8'                                                                                  Height="100" Width="100" />
            <TextBox x:ConnectionId='9' TextWrapping="Wrap" Width="500" IsReadOnly="True"
                                                                                                
               Margin="5" />
            
            <Button x:ConnectionId='10' Name="BtnArsYes" Content="Yes" Margin="10,40,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                         />
            <Button x:ConnectionId='11' Name="BtnArsNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                       />
            <Button x:ConnectionId='12' Name="BtnCheYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                        />
            <Button x:ConnectionId='13' Name="BtnCheNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                       />
            <Button x:ConnectionId='14' Name="BtnLeiYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                        />
            <Button x:ConnectionId='15' Name="BtnLeiNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                       />
            <Button x:ConnectionId='16' Name="BtnLivYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                        />
            <Button x:ConnectionId='17' Name="BtnLivNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                       />
            <Button x:ConnectionId='18' Name="BtnManCYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                          />
            <Button x:ConnectionId='19' Name="BtnManCNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                        />
            <Button x:ConnectionId='20' Name="BtnManUYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                         />
            <Button x:ConnectionId='21' Name="BtnManUNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                        />
            <Button x:ConnectionId='22' Name="BtnSpursYes" Content="Yes" Margin="10,-30,0,0" Height="30" Width="40" Background="Green" Visibility="Collapsed"                          />
            <Button x:ConnectionId='23' Name="BtnSpursNo" Content="No" Margin="70,-30,0,0" Height="30" Width="40" Background="Red" Visibility="Collapsed"                         />

        </StackPanel>
    </Grid>
</Page>

